	<params>
		<param name="catid" type="category" default="0" label="Category" description="A content category which items are used for the YOOdrawer" />
		<param name="style" type="list" default="default-v" label="Style" description="The YOOdrawer styling">
			<option value="default-v">Default (Vertical)</option>
		</param>
		<param name="title" type="text" default="Title" label="Title" description="Displayed title." />
		<param name="item_size" type="text" default="220" label="Item size (px)" description="Size of a displayed item. When aligned vertical it's the items height. When aligned horizontal it's the items width. " />
		<param name="item_minimized" type="text" default="90" label="Item minimized size (px)" description="Size of a minimized item. Width/Height depending on the alignment." />
		<param name="order" type="list" default="o_asc" label="Ordering" description="Ordering options">
			<option value="o_asc">Article Order</option>
			<option value="c_dsc">Recently Added First</option>
			<option value="m_dsc">Recently Modified First</option>
			<option value="h_dsc">Most Popular</option>			
			<option value="rnd">Randomize</option>
	  	</param>
		<param name="readmore" type="list" default="0" label="Read More" description="Show/Hide the Read More button">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="items" type="text" default="4" label="No. of Items" description="Maximum no of items to display" />
		<param name="module_height" type="text" default="150" label="Module height (px)" description="Module height, only needed for horizontal layout" />
		<param name="moduleclass_sfx" type="text" default="-blank" label="Module Class Suffix" description="Module Class Suffix" />
	</params>
	<params group="advanced">
		<param name="cache" type="list" default="0" label="Caching" description="Select whether to cache the content of this module">
			<option value="1">Use global</option>
			<option value="0">No caching</option>
		</param>
		<param name="cache_time" type="text" default="900" label="Cache Time" description="The time before the module is recached" />
	</params>
